<div class="login">
    <div class="form">
        <form class="login-form" id="signup" method="post" action="/admin/editUser/{{userData._id}}">
            <span>Edit User</span>
            <p>Fill in the data below.</p>
            <div class="text-danger">
                <input
                    type="text"
                    placeholder="name"
                    name="username"
                    value="{{userData.username}}"
                    autocomplete="off"
                /></div>

            <div class="text-danger">
                <input type="text" placeholder="email" name="email" value="{{userData.email}}" required="true" /></div>

            <div class="text-danger">
                <input
                    type="password"
                    placeholder="password"
                    name="password"
                    value="{{userData.password}}"
                    required="true"
                /></div>

            <button type="submit">Save</button>
        </form>
    </div>
</div>